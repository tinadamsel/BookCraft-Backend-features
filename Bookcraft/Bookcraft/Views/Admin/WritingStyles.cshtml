@model IEnumerable<Core.ViewModels.WritingStylesViewModel>

@{
    ViewData["Title"] = "Writing Style";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Writing Styles</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Start Button -->
                    <div class="col-lg-12 col-sm-12 mb-5">
                        <button type="button" class="btn btn-outline-success rounded-pill" data-bs-toggle="modal" data-bs-target="#addStyle" style=" float: right; margin-right: 20px;">
                            Add Writng Style
                        </button>
                    </div>
                    <!-- End Button -->

                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            <th> S/N</th>
                            <th> Name </th>
                            <th> DateCreated</th>
                            <th> Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {

                        <tbody>
                            @foreach (var style in Model)
                            {
                                var noCount = 1;
                                <tr>
                                    <td>@noCount</td>
                                    <td>@style.Name </td>
                                    <td>@style.DateCreated.ToString("D")</td>
                                    <td class="text-right">
                                        <div style="display: flex" class="my-2">
                                            <a class="btn btn-outline-success mx-1" data-toggle="modal" data-target="#edit_wStyle" onclick="StyleToBeEdited('@style.Id')">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a class="btn btn-outline-success mx-1" data-toggle="modal" data-target="#delete_style" onclick="StyleToDelete('@style.Id')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                noCount++;
                            }
                        </tbody>


                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->
<!-- Add subject modal start -->
<div class="modal fade" id="addStyle" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Add Writing Style </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <label class="col-form-label"> Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="Wstyle_Name" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="submit_btn" onclick="addStyle()">Add Style </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Subject Modal -->
<div class="modal fade" id="edit_wStyle" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Edit Writing Style </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <label class="col-form-label"> Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="edit_wStyle_Name" required>
                        <input class="form-control" hidden type="text" id="wStyle_id">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="submit_btn" onclick="SaveEditedStyle()">Edit Style </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->

<div class="modal fade" id="delete_style" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> <b> Delete Writing Style </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to delete?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="wStyle_id">
                        <div class="col-6">
                            <a class="btn btn-outline-success rounded-pill p-2 d-block" id="deleteSubject" onclick="DeleteStyle()">Delete</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn btn-outline-success rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /Delete Modal -->