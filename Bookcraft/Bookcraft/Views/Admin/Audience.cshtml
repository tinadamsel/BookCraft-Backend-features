@model IEnumerable<Core.ViewModels.TargetAudienceViewModel>

@{
    ViewData["Title"] = "Target Audience";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Dashboard</a></li>
                <li class="breadcrumb-item active"> Manage Audience</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- Start Button -->
                    <div class="col-lg-12 col-sm-12 mb-5">
                        <button type="button" class="btn card-button rounded-pill" data-bs-toggle="modal" data-bs-target="#addAud" style=" float: right; margin-right: 20px;">
                            Add Audience
                        </button>
                    </div>
                    <!-- End Button -->

                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover table-striped custom-table" id="dataTable">
                    <thead>
                        <tr>
                            <th class="text-white"> S/N</th>
                            <th class="text-white"> Name </th>
                            <th class="text-white"> DateCreated</th>
                            <th class="text-white"> Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count() > 0 && Model != null)
                    {

                        <tbody>
                            @{
                                var noCount = 1;
                            }
                            @foreach (var audience in Model)
                            {
                               
                                <tr>
                                    <td class="text-white">@noCount</td>
                                    <td class="text-white">@audience.Name </td>
                                    <td class="text-white">@audience.DateCreated.ToString("D")</td>
                                    <td class="text-right">
                                        <div style="display: flex" class="my-2">
                                            <a class="btn card-button mx-1" data-toggle="modal" data-target="#edit_aud" onclick="audToBeEdited('@audience.Id')">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a class="btn card-button mx-1" data-toggle="modal" data-target="#delete_aud" onclick="audToDelete('@audience.Id')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                noCount++;
                            }
                        </tbody>


                    }

                </table>
            </div>
        </div>
    </div>
</main><!-- End #main -->
<!-- Add subject modal start -->
<div class="modal fade" id="addAud" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title text-white"> <b> Add Target Audience </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <label class="col-form-label text-white"> Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="aud_Name" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn card-button" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn card-button" id="submit_btn" onclick="addAud()">Add Audinece</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Subject Modal -->
<div class="modal fade" id="edit_aud" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title text-white"> <b> Edit Target Audience </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 col-lg-12">
                        <label class="col-form-label text-white"> Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="edit_Aud_Name" required>
                        <input class="form-control" hidden type="text" id="aud_id">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn card-button" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn card-button" id="submit_btn" onclick="SaveEditedAudience()">Edit Audience</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->

<div class="modal fade" id="delete_aud" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title text-white"> <b> Delete Target Audience </b> </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center text-white">Are you sure you want to delete?</p>
                <div class="modal-btn delete-action">
                    <div class="row m-auto">
                        <input class="form-control" hidden type="text" id="aud_id">
                        <div class="col-6">
                            <a class="btn card-button rounded-pill p-2 d-block" id="deleteSubject" onclick="DeleteAud()">Delete</a>
                        </div>
                        <div class="col-6">
                            <a data-bs-dismiss="modal" class="btn card-button rounded-pill p-2 d-block">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /Delete Modal -->