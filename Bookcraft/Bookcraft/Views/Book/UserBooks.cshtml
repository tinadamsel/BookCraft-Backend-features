@model IEnumerable<Core.ViewModels.BookViewModel> 

@{
    ViewData["Title"] = "My Books";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1> My Books! </h1>
        <!-- <h1> Welcome! <small> Admin </small> </h1> -->
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active"> <small> Dashboard </small> </li>
                <li class="breadcrumb-item active"> <small> My Generated Books </small> </li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard mt-5">
        <div class="row mx-auto">
            <div class="pagetitle text-center">
                <h1>Powerful Features: View your generated books </h1>
                <p class="text-secondary"> Let our AI help you craft the perfect book from start to finish</p>
            </div>
            <!-- Left side columns -->
            <div class="col-lg-12 mx-auto">
                <div class="row">
                    <div class="container" data-aos="fade-up" data-aos-delay="100">
                        @if (Model != null)
                        {
                            <div class="row gy-4">
                                @foreach (var book in Model)
                                {
                                    <div class="col-lg-4 col-md-4">
                                        <div class="card-body">
                                            <img src="@(string.IsNullOrWhiteSpace(book.CoverDesignUrl)
                                                   ? Url.Content("~/asset/img/book-img.jpg") : book.CoverDesignUrl)"
                                         class="card-img-top rounded mt-3" />
                                            <h5 class="card-title text-secondary"> About this book  </h5>
                                            <div class="align-items-center">
                                                <div class="d-flex justify-content-between">
                                                    <h5 class="card-title"> @book.BookTitle </h5>
                                                    <p class="card-title" style="color: aqua; font-size: smaller;"> <small> Generated </small></p>
                                                </div>
                                            </div>
                                            <p class="text-white"> <small> @book.BookDescription </small> </p>
                                            <div class="align-items-center">
                                                <div class="d-flex justify-content-between">
                                                    <p class="card-text text-light"> <small> Pages: @book.PageSize </small></p>
                                                    <p class="card-text text-light"> <small> Chapters: @book.TotalChapters </small></p>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <a class="btn card-button" asp-controller="Book" asp-action="DownloadPdf" asp-route-bookId="@book.Id" style="color: white; font-size: 9px; padding: 5px">
                                                     <b> Download PDF </b>
                                                </a>
                                                <a class="btn card-button" asp-controller="Book" asp-action="DownloadDocx" asp-route-bookId="@book.Id" style="color: white; font-size: 8px; padding: 5px">
                                                    <b> Download DOCX </b>
                                                </a>
                                                <a class="btn card-button" asp-controller="Book" asp-action="DownloadEpub" asp-route-bookId="@book.Id" style="color: white; font-size: 8px; padding: 5px">
                                                    <b>  Download EPUB </b>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div><!-- End Left side columns -->

        </div>
    </section>

</main><!-- End main -->
